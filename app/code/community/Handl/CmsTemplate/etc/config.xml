<?xml version="1.0" encoding="UTF-8"?>
<config>
    <modules>
        <Handl_CmsTemplate>
            <version>0.0.1</version>
        </Handl_CmsTemplate>
    </modules>
    <global>
        <resources>
            <cmstemplate_setup>
                <setup><module>Handl_CmsTemplate</module></setup>
                <connection><use>core_setup</use></connection>
            </cmstemplate_setup>
        </resources>
        <helpers>
            <cmstemplate>
                <class>Handl_CmsTemplate_Helper</class>
            </cmstemplate>
        </helpers>
        <blocks>
            <cmstemplate>
                <class>Handl_CmsTemplate_Block</class>
            </cmstemplate>
        </blocks>
        <models>
            <cmstemplate>
                <class>Handl_CmsTemplate_Model</class>
                <resourceModel>cmstemplate_mysql4</resourceModel>
            </cmstemplate>
            <cmstemplate_mysql4>
                <class>Handl_CmsTemplate_Model_Mysql4</class>
                <entities>
                    <page>
                        <table>cmstemplate_page</table>
                    </page>
                    <page_data>
                        <table>cmstemplate_page_data</table>
                    </page_data>
                    <block>
                        <table>cmstemplate_block</table>
                    </block>
                    <block_data>
                        <table>cmstemplate_block_data</table>
                    </block_data>
                </entities>
            </cmstemplate_mysql4>
        </models>
    </global>
    <adminhtml>
        <layout>
            <updates>
                <cmstemplate>
                    <file>cmstemplate.xml</file>
                </cmstemplate>
            </updates>
        </layout>
        <events>
            <cms_page_save_before>
                <observers>
                    <cmstemplate_save_page_data>
                        <type>singleton</type>
                        <class>cmstemplate/observer</class>
                        <method>setCmsPageContent</method>
                    </cmstemplate_save_page_data>
                </observers>
            </cms_page_save_before>
            <cms_page_save_after>
                <observers>
                    <cmstemplate_save_page_template>
                        <type>singleton</type>
                        <class>cmstemplate/observer</class>
                        <method>saveCmsPageTemplate</method>
                    </cmstemplate_save_page_template>
                </observers>
            </cms_page_save_after>
        </events>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <cmstemplate>
                                            <title>CMS Template Section</title>
                                        </cmstemplate>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
    <default>
       <cmstemplate>
            <cms_page>
                <hide_content_tab>1</hide_content_tab>
                <cmstemplate_tab_label>Content</cmstemplate_tab_label>
            </cms_page>
        </cmstemplate>
    </default>
</config>